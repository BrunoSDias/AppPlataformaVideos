<% if @user&.errors&.any? %>
  <div class="alert alert-danger alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4><%= pluralize(@user.errors.count, "erro") %> impediram o usuario de ser criado:</h4>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<form class="form-signin" id="form-signin" action="/signup/create", method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <img class="mb-4" src="https://www.vhv.rs/dpng/d/325-3251170_courses-icon-black-and-white-png-download-study.png" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Cadastre-se</h1>
  <label for="inputNome" class="sr-only">Nome</label>
  <input type="text" class="form-control" id="inputNome" placeholder="Nome" required="" autofocus="" name="user[nome]">
  <label for="inputCpf" class="sr-only">Cpf</label>
  <input type="text" class="form-control cpf" id="inputCpf" placeholder="Cpf" required="" autofocus="" name="user[cpf]">
  <label for="inputTelefone" class="sr-only">Telefone</label>
  <input type="text" class="form-control tel" id="inputTelefone" placeholder="Telefone" required="" autofocus="" name="user[telefone]">
  <label for="inputEmail" class="sr-only">Endereço de email</label>
  <input type="email" id="inputEmail" class="form-control" placeholder="Endereço de email" required="" autofocus="" name="user[email]">
  <label for="inputPassword" class="sr-only">Senha</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Senha" required="" name="user[password]">
  <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  <p class="mt-5 mb-3 text-muted">© 2021-<%= Time.now.year %></p>
</form>


<script>
  document.getElementById("form-sigin").addEventListener("submit", function(evt) {
    showLoading();
  })
</script>