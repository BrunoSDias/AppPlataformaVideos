<div class="page-header">
  <h1>Pedidos - Qnt: <%= @orders_count %> | Valor Total Recebído: <%= number_to_currency(@orders_total) %></h1>
  <%= link_to "Confira seu saldo no stripe", "https://dashboard.stripe.com/test/dashboard", target: '_blank', style: 'font-size: 1.4em;'%>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Vendedor</th>
        <th>Total de vendas</th>
        <th>Total arrecadado de taxas</th>
        <th>Total Líquido do Vendedor</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @vendors) do |vendor| %>
        <td>
          <b>Id: </b> <%= vendor.id %> <br>
          <b>Nome: </b> <%= vendor.nome %> <br>
        </td>
        <td> <%= vendor.total_bruto %> </td>
        <td> <%= vendor.total_taxas %> </td>
        <td> <%= vendor.total_liquido %> </td>
      <% end %>
    </tbody>
  </table>
</div>
