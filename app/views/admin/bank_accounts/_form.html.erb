<%= form_for([@administrator, @admin_bank_account], url: admin_administrator_bank_accounts_path(@administrator, @admin_bank_account), html: { class: "form-horizontal formContainer", role: "form" }) do |f| %>
  <% if @admin_bank_account.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@admin_bank_account.errors.count, "error") %> prohibited this admin_bank_account de ser salvo:</h4>

      <ul>
      <% @admin_bank_account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :agencia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :agencia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :banco, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :banco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
