<%= form_for(@sales_address, html: { class: "form-horizontal formContainer", role: "form" }) do |f| %>
  <% if @sales_address.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@sales_address.errors.count, "error") %> prohibited this sales_address de ser salvo:</h4>

      <ul>
      <% @sales_address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :rua, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rua, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :estado, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cep, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cep, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bairro, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :bairro, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sales_seller, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :sales_seller, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
