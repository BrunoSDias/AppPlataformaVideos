<div class="page-header">
  <%= link_to new_sales_seller_address_path(@sales_seller), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Endereço
  <% end %>
  <%= link_to sales_seller_path(@sales_seller), class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Voltar
  <% end %>
  <h1>Endereços</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Rua</th>
        <th>Numero</th>
        <th>Estado</th>
        <th>Cep</th>
        <th>Bairro</th>
        <th>Sales seller</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @sales_addresses) do |sales_address| %>
        <td><%= sales_address.rua %></td>
        <td><%= sales_address.numero %></td>
        <td><%= sales_address.estado %></td>
        <td><%= sales_address.cep %></td>
        <td><%= sales_address.bairro %></td>
        <td><%= sales_address.sales_seller.nome %></td>
        <td><%= link_to 'Mostrar', sales_seller_address_path(@sales_seller, sales_address) %></td>
        <td><%= link_to 'Editar', edit_sales_seller_address_path(@sales_seller, sales_address) %></td>
        <td><%= link_to 'Remover', sales_seller_address_path(@sales_seller, sales_address), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
